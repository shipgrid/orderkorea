{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "lib": ["es2018"],
    "outDir": "./dist",
    "rootDir": ".", // Set to the current directory since TypeScript files are not in a 'src' folder
    "allowJs": true, // Allow JavaScript files
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noEmit": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.js"], // Include both TypeScript and JavaScript files
  "exclude": ["node_modules", "**/*.spec.ts"]
}
